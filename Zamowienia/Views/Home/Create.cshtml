@model Zamowienie
@{
    ViewData["Title"] = "Nowe zamówienie";
}

    <form class="mt-3" enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post">

        <div class="form-group row">
            <div class="col-sm-8">
                <input class="form-control" placeholder="Nazwa" asp-for="Nazwa" />
                <span class="text-danger" asp-validation-for="Nazwa"></span>
            </div>
            <button class="btn btn-primary col-sm-2" type="submit">Stwórz nowe zamówienie</button>
        </div>
    </form>

